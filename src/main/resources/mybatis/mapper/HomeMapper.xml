<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.redline.ecoredlinekgback.mapper.HomeMapper">
    <select id="getInstanceArr" resultType="com.redline.ecoredlinekgback.pojo.Instance">
        select id,title,description,img_url
        from instance
        <if test="num != null">
            limit #{num}
        </if>
    </select>
</mapper>